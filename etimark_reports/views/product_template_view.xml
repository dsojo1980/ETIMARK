<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="product_template_inherit_etimark_form" model="ir.ui.view">
        <field name="name">product.template.inherit.etimark.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="measures_in_cm" string="Medidas en cm"/>
                <field name="raw_material" string="Materia Prima"/>
            </xpath>
            <xpath expr="//field[@name='taxes_id']" position="after">
                <field name="mile_price" string="Precio x milla" widget="monetary" options="{'currency_field': 'currency_usd_id', 'field_digits': True}"/>
            </xpath>
            <xpath expr="//field[@name='mile_price']" position="after">
                <field name="total_price" string="Total x Unidades" invisible="1" widget="monetary" options="{'currency_field': 'currency_usd_id', 'field_digits': True}"/>
            </xpath>
        </field>
    </record>
    
    <record id="product_product_inherit_etimark_form" model="ir.ui.view">
        <field name="name">product.product.inherit.etimark.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="measures_in_cm" string="Medidas en cm"/>
                <field name="raw_material" string="Materia Prima"/>
            </xpath>
            <xpath expr="//field[@name='taxes_id']" position="after">
                <field name="mile_price" string="Precio x milla" widget="monetary" options="{'currency_field': 'currency_usd_id', 'field_digits': True}"/>
            </xpath>
            <xpath expr="//field[@name='mile_price']" position="after">
                <field name="total_price" string="Total x Unidades" invisible="1" widget="monetary" options="{'currency_field': 'currency_usd_id', 'field_digits': True}"/>
            </xpath>
        </field>
    </record>
</odoo>