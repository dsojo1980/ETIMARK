            <td colspan="3"  ><strong>Son:&amp;nbsp;<t t-esc="docs.get_literal_amount(docs.total_lineas_org)"/></strong></td>
          </tr>
    

      </table>
</div>
</t>



  <!-- footer de dolares -->
<t t-if="docs.currency_id.name == 'USD'">
