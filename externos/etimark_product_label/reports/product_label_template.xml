                <div align="left" style="font-size:.65rem; margin-top:10px;font-weight-bold">
                    OPERADOR: <span t-esc="docs.operator" style="font-size:.65rem;font-weight-bold"/>
                </div>
                <div>
                </div>
                <div align="center" style="font-size:.65rem; margin-top:50px; font-weight-bold">
                    PESO: __________________ 
                </div>
                <div align="center" style="font-size:.65rem; margin-top:2px;font-weight-bold">
                    <t t-set="info" t-value="request.env['mrp.manual.operations'].search([])"/>
                    <t t-foreach="request.env['mrp.manual.operations'].search([])" t-as="operations">
                        <t t-if="operations.is_active == True">
                            <td style="font-size:.65rem;font-weight-bold">
                                <span t-field="operations.manual_operations"/>
                            </td>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>